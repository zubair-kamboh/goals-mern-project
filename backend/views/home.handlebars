<div class='container'>
  <form method='post' action='/api/goals'>
    <div class='my-3'>
      <label for='goal' class='form-label'>Add Your Goal</label>
      <input
        type='text'
        class='form-control'
        id='goal'
        placeholder='Learn MERN Stack in 2022'
        name='goal'
        autofocus
      />
    </div>
    <button type='submit' class='btn btn-primary'>Submit</button>
  </form>

  {{#if data}}
    <ul class='list-group'>
      {{#each data}}
        <li
          class='list-group-item list-group-item-info mb-1 d-flex justify-content-between align-items-center'
        >{{this.text}}
          <span class='d-flex justify-content-center align-items-center'>

            {{!-- <form action='/api/goals/?id={{this._id}}' method='get' class='m-0'> --}}
            <a
              href='/update-goal?id={{this._id}}'
              class='btn btn-sm btn-primary me-2'
            >Edit</a>
            {{! </form> }}

            <form
              method='post'
              action='/api/goals/{{this._id}}?_method=DELETE'
              class='m-0'
            >
              <button
                type='submit'
                class='btn btn-danger btn-sm'
              >Delete</button>

            </form>

          </span>
        </li>
      {{/each}}
    </ul>

  {{else}}
    <h1>No Goals to show</h1>
  {{/if}}

</div>